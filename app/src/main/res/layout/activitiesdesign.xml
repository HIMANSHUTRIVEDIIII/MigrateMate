<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="291dp"
    android:layout_height="262dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="25dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img1design"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:layout_marginBottom="1dp"
            android:src="@drawable/demoimage"></ImageView>

        <TextView
            android:id="@+id/datedesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="17-1-2024/14:30"
            android:fontFamily="@font/roboto_medium"
            android:layout_marginBottom="3dp"
            android:textColor="#84B5EA"
            android:textSize="@dimen/_12sdp">

        </TextView>

        <TextView
            android:id="@+id/descriptiondesign"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:fontFamily="@font/roboto_medium"
            android:text=" Slide into A Family Meal"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp">

        </TextView>

    </LinearLayout>

</androidx.cardview.widget.CardView>